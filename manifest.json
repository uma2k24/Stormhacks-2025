{
    "manifest_version": 3,
    "name": "Eleven Narrator",
    "version": "1.0.0",
    "description": "Narrate highlighted text using ElevenLabs TTS.",
    "permissions": ["contextMenus", "activeTab", "tts"],
    "host_permissions": ["https://api.elevenlabs.io/*"],
    "action": {
        "default_title": "Eleven Narrator",
        "default_popup": "popup.html"
    },
    "background": {"service_worker": "background.js"},
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "narrate-selection":{
            "suggested_key":{"default": "Ctrl+Shift+Y"},
            "description": "Narrate currently selected text."
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
